pipeline {
  agent any
  stages {
    stage('Clonar repositorio') {
      steps {
          git branch: 'Develop', url: 'https://github.com/JorchCanelo/Proyecto-DevOps-2023.git'
        }
      }   
    stage('Instalar dependencias') {
      steps {
        powershell 'npm install'
      }
    }
    stage('Ejecutar pruebas') {
      steps {
        powershell 'npm test -- --forceExit' 
      }
    }
    stage('Detener contenedores'){
      steps {
        //powershell 'docker stop $(docker ps -q --filter "publish=5000")'
        powershell -Command "$containerIds = (docker ps -q --filter 'publish=5000'); if ([string]::IsNullOrEmpty($containerIds)) { Write-Host 'No hay contenedores en ejecuci√≥n en el puerto 5000.' } else { docker stop $containerIds }"

      }
    }
    stage('Desplegar') {
      steps {
        build job: 'Proyecto-Final-Devops-Despliegue', propagate: false
      }
    }
  }
}
